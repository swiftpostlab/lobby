{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "baseUrl": "src",
  "include": [
    "eslint.config.mjs",
    "next-env.d.ts",
    "**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}